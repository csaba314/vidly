@model Vidly2.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>ID: @Model.Id</li>
    @if (Model.BirthDate.HasValue)
    {
        <li>Bitrh date: @Model.BirthDate.Value.ToShortDateString()</li>
    }
    <li>Membership type: @Model.MembershipType.Name</li>
    <li>Is subscribed: @Model.IsSubscribedToNewsletter </li>
</ul>

